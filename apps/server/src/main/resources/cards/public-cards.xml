<?xml version="1.0" encoding="UTF-8"?>
<cards>
    <card id="row_color_variety" nameKey="cards.public_cards.row_color_variety.name">
        <objective pointsPerCompletion="6" descriptionKey="cards.public_cards.row_color_variety.description">
            <for-row row="ROW">
                <take-if predicate="distinct_color $ROW$" />
            </for-row>
        </objective>
    </card>
    <card id="column_color_variety" nameKey="cards.public_cards.column_color_variety.name">
        <objective pointsPerCompletion="5" descriptionKey="cards.public_cards.column_color_variety.description">
            <for-column column="COLUMN">
                <take-if predicate="distinct_color $COLUMN$" />
            </for-column>
        </objective>
    </card>
    <card id="row_shade_variety" nameKey="cards.public_cards.row_shade_variety.name">
        <objective pointsPerCompletion="5" descriptionKey="cards.public_cards.row_shade_variety.description">
            <for-row row="ROW">
                <take-if predicate="distinct_shade $ROW$" />
            </for-row>
        </objective>
    </card>
    <card id="column_shade_variety" nameKey="cards.public_cards.column_shade_variety.name">
        <objective pointsPerCompletion="4" descriptionKey="cards.public_cards.column_shade_variety.description">
            <for-column column="COLUMN">
                <take-if predicate="distinct_shade $COLUMN$" />
            </for-column>
        </objective>
    </card>
    <card id="light_shades" nameKey="cards.public_cards.light_shades.name">
        <objective pointsPerCompletion="2" descriptionKey="cards.public_cards.light_shades.description">
            <take-min>
                <count-dice filterShade="1"/>
                <count-dice filterShade="2"/>
            </take-min>
        </objective>
    </card>
    <card id="medium_shades" nameKey="cards.public_cards.medium_shades.name">
        <objective pointsPerCompletion="2" descriptionKey="cards.public_cards.medium_shades.description">
            <take-min>
                <count-dice filterShade="3"/>
                <count-dice filterShade="4"/>
            </take-min>
        </objective>
    </card>
    <card id="deep_shades" nameKey="cards.public_cards.deep_shades.name">
        <objective pointsPerCompletion="2" descriptionKey="cards.public_cards.deep_shades.description">
            <take-min>
                <count-dice filterShade="5"/>
                <count-dice filterShade="6"/>
            </take-min>
        </objective>
    </card>
    <card id="shade_variety" nameKey="cards.public_cards.shade_variety.name">
        <objective pointsPerCompletion="5" descriptionKey="cards.public_cards.shade_variety.description">
            <take-min>
                <count-dice filterShade="1"/>
                <count-dice filterShade="2"/>
                <count-dice filterShade="3"/>
                <count-dice filterShade="4"/>
                <count-dice filterShade="5"/>
                <count-dice filterShade="6"/>
            </take-min>
        </objective>
    </card>
    <card id="color_diagonals" nameKey="cards.public_cards.color_diagonals.name">
        <objective pointsPerCompletion="1" descriptionKey="cards.public_cards.color_diagonals.description">
            <take-sum>
                <count-diagonal filter="color" />
            </take-sum>
        </objective>
    </card>
    <card id="color_variety" nameKey="cards.public_cards.color_variety.name">
        <objective pointsPerCompletion="4" descriptionKey="cards.public_cards.color_variety.description">
            <take-min>
                <count-dice filterColor="red"/>
                <count-dice filterColor="yellow"/>
                <count-dice filterColor="green"/>
                <count-dice filterColor="blue"/>
                <count-dice filterColor="purple"/>
            </take-min>
        </objective>
    </card>
</cards>
