<?xml version="1.0" encoding="UTF-8"?>
<actions>
    <action id="choose" class="it.polimi.ingsw.core.actions.ChooseDieAction" requiresUserInteraction="true">
        <parameters>
            <parameter name="from" class="it.polimi.ingsw.core.DieLocation" position="0" />
            <parameter name="quantity" class="java.lang.Integer" position="1" />
        </parameters>
        <result class="it.polimi.ingsw.core.Die" isMultiple="true" />
    </action>
    <action id="choose_color" class="it.polimi.ingsw.core.actions.ChooseColorAction" requiresUserInteraction="true">
        <parameters>
            <parameter name="from" class="it.polimi.ingsw.core.DieLocation" position="0" />
            <parameter name="quantity" class="java.lang.Integer" position="1" />
        </parameters>
        <result class="it.polimi.ingsw.core.GlassColor" isMultiple="true" />
    </action>
    <action id="increment" class="it.polimi.ingsw.core.actions.IncrementAction">
        <parameters>
            <parameter name="die" class="it.polimi.ingsw.core.Die" position="0" />
            <parameter name="by" class="java.lang.Integer" position="1" />
        </parameters>
        <result class="it.polimi.ingsw.core.Die" isMultiple="false" />
    </action>
    <action id="decrement" class="it.polimi.ingsw.core.actions.DecrementAction">
        <parameters>
            <parameter name="die" class="it.polimi.ingsw.core.Die" position="0" />
            <parameter name="by" class="java.lang.Integer" position="1" />
        </parameters>
        <result class="it.polimi.ingsw.core.Die" isMultiple="false" />
    </action>
    <action id="pick" class="it.polimi.ingsw.core.actions.PickAction" requiresUserInteraction="true">
        <parameters>
            <parameter name="from" class="it.polimi.ingsw.core.DieLocation" position="0" />
            <parameter name="quantity" class="java.lang.Integer" position="1" />
            <parameter name="color" class="it.polimi.ingsw.core.GlassColor" position="2" default="null" />
            <parameter name="shade" class="java.lang.Integer" position="3" default="0" />
        </parameters>
        <result class="it.polimi.ingsw.core.Die" isMultiple="true" />
    </action>
    <action id="put" class="it.polimi.ingsw.core.actions.PutAction" requiresUserInteraction="true">
        <parameters>
            <parameter name="die" class="it.polimi.ingsw.core.Die" position="0" />
            <parameter name="location" class="it.polimi.ingsw.core.DieLocation" position="1" />
            <parameter name="ignoreColor" class="java.lang.Boolean" default="false" optionalName="ignore_color" position="2" />
            <parameter name="ignoreShade" class="java.lang.Boolean" default="false" optionalName="ignore_shade" position="3" />
            <parameter name="ignoreAdjacency" class="java.lang.Boolean" default="false" optionalName="ignore_adjacency" position="4" />
        </parameters>
    </action>
    <action id="swap" class="it.polimi.ingsw.core.actions.SwapAction">
        <parameters>
            <parameter name="die1" class="it.polimi.ingsw.core.Die" position="0" />
            <parameter name="die2" class="it.polimi.ingsw.core.Die" position="1" />
        </parameters>
        <result class="it.polimi.ingsw.core.Die" isMultiple="true" fixedMultiplicity="2" />
    </action>
    <action id="redraw" class="it.polimi.ingsw.core.actions.RedrawAction">
        <parameters>
            <parameter name="die" class="it.polimi.ingsw.core.Die" position="0" isMultiple="true" />
        </parameters>
        <result class="it.polimi.ingsw.core.Die" isMultiple="true" />
    </action>
    <action id="skip_turn" class="it.polimi.ingsw.core.actions.SkipTurnAction">
        <parameters>
            <parameter name="phaseNumber" class="java.lang.Integer" position="0" />
            <parameter name="roundNumber" class="java.lang.Integer" position="1" />
            <parameter name="player" class="it.polimi.ingsw.core.Player" position="2" />
        </parameters>
    </action>
    <action id="flip" class="it.polimi.ingsw.core.actions.FlipAction">
        <parameters>
            <parameter name="die" class="it.polimi.ingsw.core.Die" position="0" />
        </parameters>
        <result class="it.polimi.ingsw.core.Die" isMultiple="false" />
    </action>
    <action id="set_val" class="it.polimi.ingsw.core.actions.SetValAction" requiresUserInteraction="true">
        <parameters>
            <parameter name="die" class="it.polimi.ingsw.core.Die" position="0" />
        </parameters>
        <result class="it.polimi.ingsw.core.Die" isMultiple="false" />
    </action>
</actions>
