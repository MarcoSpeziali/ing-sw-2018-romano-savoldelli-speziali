<?xml version="1.0" encoding="UTF-8"?>
<instructions-directives>
    <instruction-directives id="for-die" class="it.polimi.ingsw.core.instructions.ForDiagonalInstruction">
        <exposes-directives>
            <variable-directives name="die" class="it.polimi.ingsw.models.Die"/>
        </exposes-directives>
        <parameters-directives>
            <parameter-directives class="java.lang.Integer" name="filterShade" default="0" position="0"/>
            <parameter-directives class="it.polimi.ingsw.core.GlassColor" default="null" name="filterColor" position="1"/>
        </parameters-directives>
    </instruction-directives>
    <instruction-directives id="for-row" class="it.polimi.ingsw.core.instructions.ForRowInstruction">
        <exposes-directives>
            <variable-directives name="row" class="it.polimi.ingsw.models.Die" multiple="true"/>
        </exposes-directives>
    </instruction-directives>
    <instruction-directives id="take-if" class="it.polimi.ingsw.core.instructions.TakeIfInstruction">
        <parameters-directives>
            <parameter-directives name="predicate" predicate="true"/>
        </parameters-directives>
    </instruction-directives>
    <instruction-directives id="take-min" class="it.polimi.ingsw.core.instructions.TakeMinInstruction"/>
    <instruction-directives id="count-diagonal" class="it.polimi.ingsw.core.instructions.CountDiagonalInstruction">
        <parameters-directives>
            <parameter-directives name="filter" class="it.polimi.ingsw.core.instructions.DieFilter" default="0" position="0"/>
            <parameter-directives name="strictShade" class="java.lang.Integer" default="0" position="1"/>
            <parameter-directives name="strictColor" class="it.polimi.ingsw.core.DieColor" default="null" position="2"/>
        </parameters-directives>
    </instruction-directives>
</instructions-directives>