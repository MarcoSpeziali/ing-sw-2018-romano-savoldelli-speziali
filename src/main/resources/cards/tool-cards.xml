<?xml version="1.0" encoding="UTF-8"?>
<cards>
    <card id="grozing_pliers" nameKey="cards.tool_cards.grozing_pliers" initialCost="1">
        <effect root="start">
	        <action id="start" effect="choose draft_pool 1" result="DIE" next="inc_dec"/>
	        <action-group id="inc_dec" executionMode="choose 1">
                <action effect="increment $DIE$ 1" constraint="not-6" />
                <action effect="decrement $DIE$ 1" constraint="not-1" />
            </action-group>
        </effect>
        <constraints>
            <constraint id="not-1">$DIE$ != 1</constraint>
            <constraint id="not-6">$DIE$ != 6</constraint>
        </constraints>
    </card>
    <card id="eglomise_brush" nameKey="cards.tool_cards.eglomise_brush" initialCost="1">
        <effect root="start">
	        <action id="start" effect="pick window 1" result="DIE" next="place"/>
	        <action id="place" effect="put $DIE$ window [ignore_color=true]"/>
        </effect>
    </card>
    <card id="copper_foil_burnisher" nameKey="cards.tool_cards.copper_foil_burnisher" initialCost="1">
        <effect root="start">
	        <action id="start" effect="pick window 1" result="DIE" next="place"/>
            <action id="place" effect="put $DIE$ window [ignore_shade=true]"/>
        </effect>
    </card>
    <card id="lathekin" nameKey="cards.tool_cards.lathekin" initialCost="1">
        <effect root="start">
            <action id="start" effect="pick window 1" result="DIE" next="place_1"/>
            <action id="place_1" effect="put $DIE$ window" next="pick_2"/>
            <action id="pick_2" effect="pick window 1" result="DIE_2" next="place_2"/>
            <action id="place_2" effect="put $DIE_2$ window"/>
        </effect>
    </card>
    <card id="lens_cutter" nameKey="cards.tool_cards.lens_cutter" initialCost="1">
        <effect root="start">
            <action id="start" effect="choose draft_pool 1" result="DIE_1"  next="pick_2"/>
            <action id="pick_2" effect="choose round_track 1" result="DIE_2" next="swap"/>
            <action id="swap" effect="swap $DIE_1$ $DIE_2$" />
        </effect>
    </card>
    <card id="flux_brush" nameKey="cards.tool_cards.flux_brush" initialCost="1">
        <effect root="start">
            <action id="start" effect="choose draft_pool 1" result="DIE" next="redraw" />
            <action id="redraw" effect="redraw $DIE$" />
        </effect>
    </card>
    <card id="glazing_hammer" nameKey="cards.tool_cards.glazing_hammer" initialCost="1">
        <effect constraint="player_turn">
            <action effect="redraw $DRAFT_POOL_DICE$" />
        </effect>
        <constraints>
            <constraint-group id="player_turn" mode="and">
                <constraint>$PLAYER_TURN$ == 2</constraint>
                <constraint>$PLAYER_TURN_PHASE$ == START</constraint>
            </constraint-group>
        </constraints>
    </card>
    <card id="running_pliers" nameKey="cards.tool_cards.running_pliers" initialCost="1">
        <effect root="start" constraint="player_turn">
            <action id="start" effect="pick draft_pool 1" result="DIE" next="place"/>
            <action id="place" effetct="put $DIE$ window" next="side-effect" />
            <action id="side-effect" effect="skip_turn 2 $CURRENT_ROUND$ $CURRENT_PLAYER$" />
        </effect>
        <constraints>
            <constraint-group id="player_turn" mode="and">
                <constraint>$PLAYER_TURN$ == 1</constraint>
                <constraint>$PLAYER_TURN_PHASE$ == END</constraint>
            </constraint-group>
        </constraints>
    </card>
    <card id="cork_backed_strainghtedge" nameKey="cards.tool_cards.cork_backed_strainghtedge" initialCost="1">
        <effect root="start">
            <action id="start" effect="pick draft_pool 1" result="DIE" next="place"/>
            <action id="place" effect="put $DIE$ window [ignore_adjacency=true]"/>
        </effect>
    </card>
    <card id="grinding_stone" nameKey="cards.tool_cards.grinding_stone" initialCost="1">
        <effect root="start">
            <action id="start" effect="choose draft_pool 1" result="DIE" next="flip"/>
            <action id="flip" effect="flip $DIE$" />
        </effect>
    </card>
    <card id="flux_remover" nameKey="cards.tool_cards.flux_remover" initialCost="1">
        <effect root="start">
            <action id="start" effect="pick draft_pool 1" result="DIE" next="place-in-bag"/>
            <action id="place-in-bag" effect="put $DIE$ bag" next="pick-bag"/>
            <action id="pick-bag" effect="pick bag 1" result="DIE" next="choose-val"/>
            <action id="choose-val" effect="set_val $DIE$" result="DIE" next="place"/>
            <action id="place" effect="put $DIE$ window"/>
        </effect>
    </card>
    <card id="tap_wheel" nameKey="cards.tool_cards.tap_wheel" initialCost="1">
        <effect root="start">
            <action id="start" effect="choose_color round_track 1" result="DIE_COLOR" next="loop" />
            <action-group id="loop" executionMode="repeat 1..2" root="pick">
                <action id="pick" effect="pick window 1 [color=$DIE_COLOR$]" result="DIE" next="put"/>
                <action id="put" effect="put $DIE$ window"/>
            </action-group>
        </effect>
    </card>
</cards>
