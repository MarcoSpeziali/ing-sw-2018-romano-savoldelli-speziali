<?xml version="1.0" encoding="UTF-8"?>
<cards>
    <card id="row_color_variety" nameKey="cards.public_cards.row_color_variety">
        <objective pointsPerCompletion="6">
            <for-row row="ROW" in="$WINDOW$">
                <take-if predicate="distinct_color $ROW$" />
            </for-row>
        </objective>
    </card>
    <card id="column_color_variety" nameKey="cards.public_cards.column_color_variety">
        <objective pointsPerCompletion="5">
            <for-column column="COLUMN" in="$WINDOW$">
                <take-if predicate="distinct_color $COLUMN$" />
            </for-column>
        </objective>
    </card>
    <card id="row_shade_variety" nameKey="cards.public_cards.row_shade_variety">
        <objective pointsPerCompletion="5" in="$WINDOW$">
            <for-row row="ROW">
                <take-if predicate="distinct_shade $ROW$" />
            </for-row>
        </objective>
    </card>
    <card id="column_shade_variety" nameKey="cards.public_cards.column_shade_variety">
        <objective pointsPerCompletion="4">
            <for-column column="COLUMN" in="$WINDOW$">
                <take-if predicate="distinct_shade $COLUMN$" />
            </for-column>
        </objective>
    </card>
    <card id="light_shades" nameKey="cards.public_cards.light_shades">
        <objective pointsPerCompletion="2">
            <take-min>
                <count-dice in="$WINDOW$" filterShade="1"/>
                <count-dice in="$WINDOW$" filterShade="2"/>
            </take-min>
        </objective>
    </card>
    <card id="medium_shades" nameKey="cards.public_cards.medium_shades">
        <objective pointsPerCompletion="2">
            <take-min>
                <count-dice in="$WINDOW$" filterShade="3"/>
                <count-dice in="$WINDOW$" filterShade="4"/>
            </take-min>
        </objective>
    </card>
    <card id="deep_shades" nameKey="cards.public_cards.deep_shades">
        <objective pointsPerCompletion="2">
            <take-min>
                <count-dice in="$WINDOW$" filterShade="5"/>
                <count-dice in="$WINDOW$" filterShade="6"/>
            </take-min>
        </objective>
    </card>
    <card id="shade_variety" nameKey="cards.public_cards.shade_variety">
        <objective pointsPerCompletion="5">
            <take-min>
                <count-dice in="$WINDOW$" filterShade="1"/>
                <count-dice in="$WINDOW$" filterShade="2"/>
                <count-dice in="$WINDOW$" filterShade="3"/>
                <count-dice in="$WINDOW$" filterShade="4"/>
                <count-dice in="$WINDOW$" filterShade="5"/>
                <count-dice in="$WINDOW$" filterShade="6"/>
            </take-min>
        </objective>
    </card>
    <card id="color_diagonals" nameKey="cards.public_cards.color_diagonals">
        <objective pointsPerCompletion="1">
            <take-sun>
                <count-diagonal filter="color" />
            </take-sun>
        </objective>
    </card>
    <card id="color_variety" nameKey="cards.public_cards.color_variety">
        <objective pointsPerCompletion="4">
            <take-min>
                <count-dice in="$WINDOW$" filterColor="red"/>
                <count-dice in="$WINDOW$" filterColor="yellow"/>
                <count-dice in="$WINDOW$" filterColor="green"/>
                <count-dice in="$WINDOW$" filterColor="blue"/>
                <count-dice in="$WINDOW$" filterColor="purple"/>
            </take-min>
        </objective>
    </card>
</cards>
